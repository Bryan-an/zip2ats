{
  "name": "zip2ats",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:pages": "opennextjs-cloudflare build",
    "deploy:default": "wrangler deploy",
    "deploy:prod": "wrangler deploy --env production",
    "versions:upload": "wrangler versions upload",
    "preview:cloudflare": "wrangler dev",
    "start": "next start",
    "type-check": "tsc --noEmit",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "db:generate": "drizzle-kit generate",
    "db:studio:local": "drizzle-kit studio --config drizzle.local.config.ts --port 4984",
    "db:studio:remote": "drizzle-kit studio --config drizzle.config.ts --port 4983",
    "db:studio:prod": "drizzle-kit studio --config drizzle.prod.config.ts --port 4985",
    "db:seed:remote": "pnpm db:d1:migrations:apply:remote && wrangler d1 execute zip2ats-db --remote --file db/seeds/sri_catalogs.seed.sql",
    "db:seed:local": "pnpm db:d1:migrations:apply:local && wrangler d1 execute zip2ats-db --local --file db/seeds/sri_catalogs.seed.sql",
    "db:seed:prod": "pnpm db:d1:migrations:apply:prod && wrangler d1 execute zip2ats-db-production --remote --env production --file db/seeds/sri_catalogs.seed.sql",
    "db:d1:migrations:apply:local": "wrangler d1 migrations apply zip2ats-db --local",
    "db:d1:migrations:apply:remote": "wrangler d1 migrations apply zip2ats-db --remote",
    "db:d1:migrations:apply:prod": "wrangler d1 migrations apply zip2ats-db-production --remote --env production"
  },
  "dependencies": {
    "@hookform/resolvers": "5.2.2",
    "@radix-ui/react-label": "2.1.8",
    "@radix-ui/react-select": "2.2.6",
    "@radix-ui/react-separator": "1.1.8",
    "@radix-ui/react-slot": "1.2.4",
    "@radix-ui/react-tooltip": "1.2.8",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "drizzle-orm": "0.44.7",
    "exceljs": "4.4.0",
    "fast-xml-parser": "5.3.2",
    "fflate": "0.8.2",
    "imask": "7.6.1",
    "lucide-react": "0.555.0",
    "next": "16.0.10",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hook-form": "7.68.0",
    "react-imask": "7.6.1",
    "tailwind-merge": "3.4.0",
    "zod": "4.1.13"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251210.0",
    "@opennextjs/cloudflare": "^1.14.7",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "better-sqlite3": "^12.5.0",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.6",
    "eslint": "^9",
    "eslint-config-next": "16.0.10",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "wrangler": "^4.54.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
